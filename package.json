{
  "name": "nmdc-field-notes",
  "private": true,
  "version": "1.1.0",
  "config": {
    "buildNumber": 16
  },
  "type": "module",
  "scripts": {
    "dev": "ionic serve --host=127.0.0.1 --port=8100 --no-open",
    "dev.android": "ionic capacitor run android --livereload --host 127.0.0.1 --port=8100",
    "dev.ios": "ionic capacitor run ios --livereload --host 127.0.0.1 --port=8100",
    "build": "tsc && vite build",
    "build.native": "tsc && ionic capacitor sync",
    "build.android": "tsc && ionic capacitor sync android",
    "build.assets": "capacitor-assets generate --iconBackgroundColor '#ffffff' --iconBackgroundColorDark '#000000' --splashBackgroundColor '#ffffff' --splashBackgroundColorDark '#000000'",
    "format": "prettier . --write",
    "check.format": "prettier . --check",
    "check.imports": "madge --circular src/main.tsx",
    "preview": "vite preview",
    "test.e2e": "cypress run",
    "test.unit": "vitest",
    "lint": "eslint src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prerelease": "vitest run && npm run build.native",
    "release": "./scripts/release.sh",
    "rename.apk": "cp android/app/prod/release/app-prod-release.apk org.microbiomedata.fieldnotes-v$npm_package_version-build.$npm_package_config_buildNumber.apk"
  },
  "dependencies": {
    "@capacitor-community/keep-awake": "^7.1.0",
    "@capacitor-firebase/analytics": "^7.2.0",
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.0",
    "@capacitor/browser": "^7.0.0",
    "@capacitor/core": "^7.4.2",
    "@capacitor/geolocation": "^7.0.0",
    "@capacitor/haptics": "^7.0.0",
    "@capacitor/ios": "^7.4.2",
    "@capacitor/keyboard": "^7.0.2",
    "@capacitor/network": "^7.0.0",
    "@capacitor/splash-screen": "^7.0.0",
    "@capacitor/status-bar": "^7.0.2",
    "@capawesome/capacitor-android-edge-to-edge-support": "^7.2.3",
    "@ionic/react": "^8.6.5",
    "@ionic/react-router": "^8.6.5",
    "@ionic/storage": "^4.0.0",
    "@reactour/tour": "^3.7.0",
    "@tanstack/query-async-storage-persister": "^5.66.4",
    "@tanstack/react-query": "^5.66.8",
    "@tanstack/react-query-devtools": "^5.66.8",
    "@tanstack/react-query-persist-client": "^5.66.8",
    "date-fns": "^3.6.0",
    "firebase": "^11.1.0",
    "immer": "^10.0.3",
    "ionicons": "^7.0.0",
    "jwt-decode": "^4.0.0",
    "minisearch": "^6.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.51.0",
    "react-markdown": "^9.0.1",
    "react-minisearch": "^6.3.0",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.4",
    "@capacitor/cli": "^7.2.0",
    "@storybook/addon-essentials": "^7.6.8",
    "@storybook/addon-interactions": "^7.6.8",
    "@storybook/addon-links": "^7.6.8",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.8",
    "@storybook/react": "^7.6.8",
    "@storybook/react-vite": "^7.6.8",
    "@storybook/test": "^7.6.8",
    "@tanstack/eslint-plugin-query": "^5.17.7",
    "@testing-library/dom": ">=7.21.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@trapezedev/configure": "^7.0.10",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.1",
    "cypress": "^13.5.0",
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-testing-library": "^6.2.0",
    "jsdom": "^22.1.0",
    "madge": "^7.0.0",
    "msw": "^2.1.5",
    "postcss-nesting": "^12.1.5",
    "prettier": "3.2.1",
    "storybook": "^7.6.8",
    "terser": "^5.4.0",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  },
  "description": "Mobile app for metadata collection on the go",
  "madge": {
    "tsConfig": "tsconfig.json",
    "fileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
